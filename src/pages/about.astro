---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'About | Xtend-AI';
const description = 'Learn about Xtend-AI, the company behind AI companion apps that help users discover, create, and share in the real world.';

const values = [
  { icon: '‚ú®', text: 'User experience comes first' },
  { icon: 'üéØ', text: 'AI should be helpful, not hype' },
  { icon: 'ü§ù', text: 'Build for trust and simplicity' },
  { icon: 'üöÄ', text: 'Iterate fast, polish hard' }
];
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <section class="page-header">
    <div class="page-header__glow"></div>
    <div class="container">
      <span class="badge">About Us</span>
      <h1>Building the future of <span class="text-gradient">AI companions</span></h1>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="about-grid">
        <div class="about-content">
          <p class="lead">
            Xtend-AI creates AI companion apps that extend what you can do ‚Äî helping users discover,
            create, and share in the real world through friendly, capable mobile experiences.
          </p>
          <p>
            We believe the best AI doesn't feel like technology ‚Äî it feels like having a knowledgeable
            friend who's always ready to help. Our apps combine conversational AI, voice interaction,
            and camera intelligence to create experiences that are genuinely useful in everyday moments.
          </p>
          <p>
            Starting with My AI Bartender, we're building a family of mobile apps for people who love
            discovering new experiences. Each app is purpose-built for its domain, designed to be
            intuitive from the first moment, and powered by AI that enhances rather than complicates.
          </p>
        </div>

        <div class="values-card card card--glow">
          <h2>Our Values</h2>
          <ul class="values-list">
            {values.map((value) => (
              <li class="values-item">
                <span class="values-icon">{value.icon}</span>
                <span>{value.text}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section section--glow">
    <div class="container text-center">
      <h2>Interested in what we're building?</h2>
      <p class="cta-text">We'd love to hear from you ‚Äî whether you're a user, partner, or just curious.</p>
      <a href="/contact" class="btn btn--primary btn--large">Get in Touch</a>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .page-header {
    position: relative;
    padding: var(--space-20) 0;
    overflow: hidden;
  }

  .page-header__glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 400px;
    background: radial-gradient(ellipse at center, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .page-header .container {
    position: relative;
    z-index: 1;
  }

  .page-header h1 {
    margin-top: var(--space-4);
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .about-grid {
    display: grid;
    gap: var(--space-12);
  }

  @media (min-width: 900px) {
    .about-grid {
      grid-template-columns: 1.5fr 1fr;
      align-items: start;
    }
  }

  .about-content {
    font-size: 1.0625rem;
    line-height: 1.8;
  }

  .lead {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--xt-text-primary);
    margin-bottom: var(--space-6);
  }

  .values-card {
    padding: var(--space-8);
  }

  .values-card h2 {
    font-size: 1.25rem;
    margin-bottom: var(--space-6);
  }

  .values-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .values-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    font-weight: 500;
    color: var(--xt-text-primary);
  }

  .values-item:last-child {
    border-bottom: none;
  }

  .values-icon {
    font-size: 1.25rem;
  }

  .cta-text {
    font-size: 1.125rem;
    margin-bottom: var(--space-8);
  }
</style>
