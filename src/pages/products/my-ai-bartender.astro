---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FeatureCard from '../../components/FeatureCard.astro';

const title = 'My AI Bartender | Xtend-AI';
const description = 'Your personal AI bartender. Discover cocktails, make smarter substitutions, chat hands-free, and create your own recipes with AI assistance.';

const steps = [
  {
    number: '1',
    title: 'Build "My Bar"',
    description: 'Scan your bottles or manually add what you have at home to create your personal bar inventory.'
  },
  {
    number: '2',
    title: 'Ask the bartender',
    description: 'Chat or talk with your AI bartender to get cocktail recommendations based on what you have.'
  },
  {
    number: '3',
    title: 'Create & refine',
    description: 'Build your own recipes and get AI suggestions to perfect your creations.'
  },
  {
    number: '4',
    title: 'Share with friends',
    description: 'Share your favorite recipes with friends using simple codes or links.'
  }
];

const features = [
  { icon: 'chat', title: 'Chat', description: 'Ask for cocktails, ideas, substitutions, and step-by-step help.' },
  { icon: 'voice', title: 'Voice', description: 'Real-time voice bartender conversations, completely hands-free.' },
  { icon: 'scanner', title: 'Scanner', description: 'Use your camera to identify bottles and build your bar.' },
  { icon: 'default', title: 'Recipe Vault', description: 'Save your favorites and build your personal collection.' },
  { icon: 'create', title: 'Create Studio', description: 'Build custom recipes with AI-powered suggestions.' },
  { icon: 'share', title: 'Friends via Code', description: 'Share recipes instantly with simple codes or links.' }
];
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__container container">
      <span class="hero__badge">Now Available</span>
      <h1 class="hero__title">My AI Bartender</h1>
      <p class="hero__subtitle">
        Your personal AI bartender that helps you discover cocktails, make smarter substitutions,
        and use what you already have.
      </p>
      <div class="hero__actions">
        <a href="#" class="btn btn--primary btn--large store-btn" aria-label="Coming soon to App Store">
          <svg width="20" height="24" viewBox="0 0 20 24" fill="currentColor" aria-hidden="true">
            <path d="M16.5 12.5c0-2.8 2.3-4.2 2.4-4.3-1.3-1.9-3.3-2.2-4-2.2-1.7-.2-3.4 1-4.3 1s-2.2-1-3.6-1c-1.9 0-3.6 1.1-4.5 2.8-1.9 3.3-.5 8.3 1.4 11 .9 1.3 2 2.8 3.5 2.7 1.4-.1 1.9-.9 3.6-.9s2.1.9 3.6.9c1.5 0 2.4-1.3 3.3-2.7 1-1.5 1.5-3 1.5-3.1-.1 0-2.9-1.1-2.9-4.2zM13.8 4.3c.8-.9 1.3-2.2 1.1-3.5-1.1 0-2.5.8-3.3 1.7-.7.8-1.3 2.1-1.2 3.4 1.3.1 2.6-.6 3.4-1.6z"/>
          </svg>
          App Store (Coming Soon)
        </a>
        <a href="#" class="btn btn--secondary btn--large store-btn" aria-label="Coming soon to Google Play">
          <svg width="20" height="22" viewBox="0 0 20 22" fill="currentColor" aria-hidden="true">
            <path d="M1 1.4L12.4 11 1 20.6V1.4zM14.3 11l4.7 4.2-4.7 4.2-2.8-2.5 2.8-5.9zm-2.8-5.9L14.3 11l-2.8 5.9L1.7 11l9.8-5.9zM1 .2c-.3.2-.5.5-.5.9v19.8c0 .4.2.7.5.9l11.5-10.3L1 .2z"/>
          </svg>
          Google Play (Coming Soon)
        </a>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section">
    <div class="container">
      <h2 class="section__title text-center">How it works</h2>
      <div class="steps">
        {steps.map((step) => (
          <div class="step">
            <div class="step__number">{step.number}</div>
            <div class="step__content">
              <h3 class="step__title">{step.title}</h3>
              <p class="step__description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section section--alt">
    <div class="container">
      <h2 class="section__title text-center">Key Features</h2>
      <div class="grid grid--3">
        {features.map((feature) => (
          <FeatureCard
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Responsible Use Section -->
  <section class="section">
    <div class="container">
      <div class="notice">
        <div class="notice__icon">21+</div>
        <div class="notice__content">
          <h3 class="notice__title">Responsible Use</h3>
          <p class="notice__text">
            My AI Bartender is intended for users of legal drinking age (21+ in the US).
            Please enjoy responsibly and never drink and drive.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section--gradient">
    <div class="container text-center">
      <h2 class="section__title">Ready to discover your next favorite cocktail?</h2>
      <p class="section__subtitle">Join the waitlist to be notified when My AI Bartender launches.</p>
      <a href="/contact" class="btn btn--primary btn--large">Contact Us</a>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Hero */
  .hero {
    padding: var(--space-20) 0;
    background: var(--xt-gradient-brand);
    color: var(--xt-white);
    text-align: center;
  }

  .hero__container {
    max-width: 800px;
  }

  .hero__badge {
    display: inline-block;
    padding: var(--space-1) var(--space-4);
    font-size: 0.875rem;
    font-weight: 600;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    margin-bottom: var(--space-6);
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    color: var(--xt-white);
    margin-bottom: var(--space-6);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: var(--space-8);
    opacity: 0.95;
  }

  .hero__actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
  }

  @media (min-width: 540px) {
    .hero__actions {
      flex-direction: row;
      justify-content: center;
    }
  }

  .store-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .store-btn svg {
    flex-shrink: 0;
  }

  .hero .btn--primary {
    background: var(--xt-white);
    color: var(--xt-navy-900);
    border-color: var(--xt-white);
  }

  .hero .btn--primary:hover {
    background: var(--xt-slate-050);
  }

  .hero .btn--secondary {
    border-color: var(--xt-white);
    color: var(--xt-white);
  }

  .hero .btn--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  /* Section Titles */
  .section__title {
    margin-bottom: var(--space-8);
  }

  .section__subtitle {
    font-size: 1.125rem;
    margin-bottom: var(--space-8);
    opacity: 0.8;
  }

  /* Steps */
  .steps {
    display: grid;
    gap: var(--space-6);
    max-width: 700px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .steps {
      grid-template-columns: repeat(2, 1fr);
      max-width: none;
    }
  }

  .step {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-6);
    background: var(--xt-white);
    border: 1px solid var(--xt-slate-300);
    border-radius: var(--radius-lg);
  }

  .step__number {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--xt-white);
    background: var(--xt-gradient-brand);
    border-radius: 50%;
  }

  .step__title {
    font-size: 1.125rem;
    margin-bottom: var(--space-2);
  }

  .step__description {
    font-size: 0.9375rem;
    color: var(--xt-navy-900);
    opacity: 0.8;
    margin: 0;
  }

  /* Notice */
  .notice {
    display: flex;
    gap: var(--space-6);
    align-items: flex-start;
    max-width: 700px;
    margin: 0 auto;
    padding: var(--space-6);
    background: var(--xt-slate-050);
    border-radius: var(--radius-lg);
  }

  .notice__icon {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--xt-navy-900);
    background: var(--xt-white);
    border: 2px solid var(--xt-navy-900);
    border-radius: 50%;
  }

  .notice__title {
    font-size: 1.125rem;
    margin-bottom: var(--space-2);
  }

  .notice__text {
    font-size: 0.9375rem;
    color: var(--xt-navy-900);
    opacity: 0.8;
    margin: 0;
  }
</style>
