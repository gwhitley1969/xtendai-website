---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = 'My AI Bartender | Xtend-AI';
const description = 'Your personal AI bartender. Discover cocktails, make smarter substitutions, chat hands-free, and create your own recipes with AI assistance.';

const steps = [
  {
    number: '1',
    title: 'Build "My Bar"',
    description: 'Scan your bottles or manually add what you have at home to create your personal bar inventory.',
    color: 'purple'
  },
  {
    number: '2',
    title: 'Ask the bartender',
    description: 'Chat or talk with your AI bartender to get cocktail recommendations based on what you have.',
    color: 'blue'
  },
  {
    number: '3',
    title: 'Create & refine',
    description: 'Build your own recipes and get AI suggestions to perfect your creations.',
    color: 'coral'
  },
  {
    number: '4',
    title: 'Share with friends',
    description: 'Share your favorite recipes with friends using simple codes or links.',
    color: 'gold'
  }
];

const features = [
  { icon: 'üí¨', title: 'Chat', description: 'Ask for cocktails, ideas, substitutions, and step-by-step help.', color: 'blue' },
  { icon: 'üéôÔ∏è', title: 'Voice', description: 'Real-time voice bartender conversations, completely hands-free.', color: 'green' },
  { icon: 'üì∑', title: 'Scan My Bar', description: 'Use your camera to identify bottles and build your bar.', color: 'coral' },
  { icon: 'üìö', title: 'Recipe Vault', description: 'Save your favorites and build your personal collection.', color: 'gold' },
  { icon: 'üé®', title: 'Create Studio', description: 'Build custom recipes with AI-powered suggestions.', color: 'purple' },
  { icon: 'üîó', title: 'Friends via Code', description: 'Share recipes instantly with simple codes or links.', color: 'green' }
];
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__glow"></div>
    <div class="hero__glow hero__glow--secondary"></div>
    <div class="hero__container container">
      <span class="badge badge--glow">Available Soon</span>
      <h1 class="hero__title">My AI <span class="text-gradient">Bartender</span></h1>
      <p class="hero__subtitle">
        Your personal AI bartender that helps you discover cocktails, make smarter substitutions,
        and use what you already have.
      </p>
      <div class="hero__actions">
        <a href="#" class="btn btn--primary btn--large store-btn" aria-label="Coming soon to App Store">
          <svg width="20" height="24" viewBox="0 0 20 24" fill="currentColor" aria-hidden="true">
            <path d="M16.5 12.5c0-2.8 2.3-4.2 2.4-4.3-1.3-1.9-3.3-2.2-4-2.2-1.7-.2-3.4 1-4.3 1s-2.2-1-3.6-1c-1.9 0-3.6 1.1-4.5 2.8-1.9 3.3-.5 8.3 1.4 11 .9 1.3 2 2.8 3.5 2.7 1.4-.1 1.9-.9 3.6-.9s2.1.9 3.6.9c1.5 0 2.4-1.3 3.3-2.7 1-1.5 1.5-3 1.5-3.1-.1 0-2.9-1.1-2.9-4.2zM13.8 4.3c.8-.9 1.3-2.2 1.1-3.5-1.1 0-2.5.8-3.3 1.7-.7.8-1.3 2.1-1.2 3.4 1.3.1 2.6-.6 3.4-1.6z"/>
          </svg>
          App Store (Coming Soon)
        </a>
        <a href="#" class="btn btn--secondary btn--large store-btn" aria-label="Coming soon to Google Play">
          <svg width="20" height="22" viewBox="0 0 20 22" fill="currentColor" aria-hidden="true">
            <path d="M1 1.4L12.4 11 1 20.6V1.4zM14.3 11l4.7 4.2-4.7 4.2-2.8-2.5 2.8-5.9zm-2.8-5.9L14.3 11l-2.8 5.9L1.7 11l9.8-5.9zM1 .2c-.3.2-.5.5-.5.9v19.8c0 .4.2.7.5.9l11.5-10.3L1 .2z"/>
          </svg>
          Google Play (Coming Soon)
        </a>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title text-center">How it <span class="text-gradient">works</span></h2>
      <div class="steps">
        {steps.map((step) => (
          <div class="step card">
            <div class={`step__number step__number--${step.color}`}>{step.number}</div>
            <div class="step__content">
              <h3 class="step__title">{step.title}</h3>
              <p class="step__description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section section--glow">
    <div class="container">
      <h2 class="section-title text-center">Key <span class="text-gradient">Features</span></h2>
      <div class="features-grid">
        {features.map((feature) => (
          <div class="feature-card card card--glow">
            <div class={`icon-circle icon-circle--${feature.color}`}>{feature.icon}</div>
            <h3 class="feature-card__title">{feature.title}</h3>
            <p class="feature-card__description">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Responsible Use Section -->
  <section class="section">
    <div class="container">
      <div class="notice card">
        <div class="notice__icon">21+</div>
        <div class="notice__content">
          <h3 class="notice__title">Responsible Use</h3>
          <p class="notice__text">
            My AI Bartender is intended for users of legal drinking age (21+ in the US).
            Please enjoy responsibly and never drink and drive.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="cta-card card card--glow">
        <div class="cta-card__glow"></div>
        <h2>Ready to discover your next favorite cocktail?</h2>
        <p>Join the waitlist to be notified when My AI Bartender launches.</p>
        <a href="/contact" class="btn btn--primary btn--large">Contact Us</a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Hero */
  .hero {
    position: relative;
    padding: var(--space-20) 0;
    text-align: center;
    overflow: hidden;
  }

  .hero__glow {
    position: absolute;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 800px;
    height: 600px;
    background: radial-gradient(ellipse at center, rgba(139, 92, 246, 0.25) 0%, transparent 60%);
    pointer-events: none;
  }

  .hero__glow--secondary {
    top: 0;
    background: radial-gradient(ellipse at center, rgba(59, 130, 246, 0.15) 0%, transparent 50%);
  }

  .hero__container {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .badge--glow {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.3) 0%, rgba(59, 130, 246, 0.3) 100%);
    border: 1px solid rgba(139, 92, 246, 0.5);
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin: var(--space-6) 0;
  }

  .hero__subtitle {
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: var(--space-8);
    color: var(--xt-text-secondary);
  }

  .hero__actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
  }

  @media (min-width: 540px) {
    .hero__actions {
      flex-direction: row;
      justify-content: center;
    }
  }

  .store-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .store-btn svg {
    flex-shrink: 0;
  }

  /* Section Title */
  .section-title {
    margin-bottom: var(--space-12);
  }

  /* Steps */
  .steps {
    display: grid;
    gap: var(--space-6);
    max-width: 900px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .steps {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .step {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-6);
  }

  .step__number {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    border-radius: 50%;
  }

  .step__number--purple {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.3) 0%, rgba(139, 92, 246, 0.1) 100%);
    color: var(--xt-purple-light);
    border: 1px solid rgba(139, 92, 246, 0.4);
  }

  .step__number--blue {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.3) 0%, rgba(59, 130, 246, 0.1) 100%);
    color: var(--xt-blue);
    border: 1px solid rgba(59, 130, 246, 0.4);
  }

  .step__number--coral {
    background: linear-gradient(135deg, rgba(244, 114, 182, 0.3) 0%, rgba(244, 114, 182, 0.1) 100%);
    color: var(--xt-coral);
    border: 1px solid rgba(244, 114, 182, 0.4);
  }

  .step__number--gold {
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.3) 0%, rgba(251, 191, 36, 0.1) 100%);
    color: var(--xt-gold);
    border: 1px solid rgba(251, 191, 36, 0.4);
  }

  .step__title {
    font-size: 1.125rem;
    margin-bottom: var(--space-2);
  }

  .step__description {
    font-size: 0.9375rem;
    color: var(--xt-text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .feature-card {
    padding: var(--space-6);
    text-align: center;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .feature-card .icon-circle {
    margin: 0 auto var(--space-4);
  }

  .feature-card__title {
    font-size: 1.125rem;
    margin-bottom: var(--space-2);
  }

  .feature-card__description {
    font-size: 0.9375rem;
    color: var(--xt-text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  /* Notice */
  .notice {
    display: flex;
    gap: var(--space-6);
    align-items: flex-start;
    max-width: 700px;
    margin: 0 auto;
    padding: var(--space-6);
    border: 1px solid rgba(251, 191, 36, 0.3);
    background: rgba(251, 191, 36, 0.05);
  }

  .notice__icon {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--xt-gold);
    background: rgba(251, 191, 36, 0.2);
    border: 2px solid var(--xt-gold);
    border-radius: 50%;
  }

  .notice__title {
    font-size: 1.125rem;
    margin-bottom: var(--space-2);
    color: var(--xt-gold);
  }

  .notice__text {
    font-size: 0.9375rem;
    color: var(--xt-text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  /* CTA Card */
  .cta-card {
    position: relative;
    text-align: center;
    padding: var(--space-12);
    max-width: 700px;
    margin: 0 auto;
    overflow: hidden;
  }

  .cta-card__glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.2) 0%, transparent 60%);
    pointer-events: none;
  }

  .cta-card h2 {
    position: relative;
    font-size: 1.5rem;
    margin-bottom: var(--space-4);
  }

  .cta-card p {
    position: relative;
    font-size: 1.125rem;
    color: var(--xt-text-secondary);
    margin-bottom: var(--space-8);
  }

  .cta-card .btn {
    position: relative;
  }
</style>
