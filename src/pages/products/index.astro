---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = 'Products | Xtend-AI';
const description = 'Explore AI-powered mobile apps from Xtend-AI. Discover My AI Bartender and upcoming experiences in beauty and wine.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <!-- Page Header -->
  <section class="page-header">
    <div class="page-header__bg">
      <div class="page-header__glow"></div>
    </div>
    <div class="container">
      <span class="badge">Our Products</span>
      <h1>AI-powered apps for <span class="text-gradient">real life</span></h1>
      <p class="page-header__subtitle">Discover mobile experiences designed for discovery</p>
    </div>
  </section>

  <!-- Featured Product -->
  <section class="section">
    <div class="container">
      <div class="product-card product-card--featured">
        <div class="product-card__glow"></div>
        <div class="product-card__content">
          <span class="badge badge--gold">Available Soon</span>
          <h2 class="product-card__title">My AI Bartender</h2>
          <p class="product-card__description">
            Your personal AI bartender that helps you discover cocktails, make smarter substitutions,
            and use what you already have. Chat with your bartender, talk hands-free, scan your home bar,
            and refine your own creations.
          </p>
          <div class="product-card__features">
            <span class="product-card__feature">üí¨ Chat</span>
            <span class="product-card__feature">üéôÔ∏è Voice</span>
            <span class="product-card__feature">üì∑ Scan My Bar</span>
            <span class="product-card__feature">‚ú® Create</span>
            <span class="product-card__feature">üîó Share</span>
          </div>
          <a href="/products/my-ai-bartender" class="btn btn--primary btn--large">
            Learn More
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Coming Soon Section -->
  <section class="section section--glow" id="coming-soon">
    <div class="container">
      <div class="section-header text-center">
        <span class="badge">Coming Soon</span>
        <h2>More experiences in development</h2>
      </div>

      <div class="grid grid--2">
        <div class="card card--glow">
          <div class="icon-circle icon-circle--coral">üíÑ</div>
          <h3>Beauty & Cosmetics</h3>
          <p>
            An AI-powered companion for beauty enthusiasts. Get personalized recommendations,
            explore new looks, and discover products that match your style and skin type.
          </p>
        </div>

        <div class="card card--glow">
          <div class="icon-circle icon-circle--purple">üç∑</div>
          <h3>Wine Connoisseur</h3>
          <p>
            Your personal sommelier in your pocket. Discover wines, get food pairing suggestions,
            and build your knowledge through conversational AI guidance.
          </p>
        </div>
      </div>

      <div class="section__cta text-center">
        <p>Interested in partnering with us on upcoming products?</p>
        <a href="/contact" class="btn btn--secondary btn--large">Get in Touch</a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .page-header {
    position: relative;
    padding: var(--space-20) 0;
    text-align: center;
    overflow: hidden;
  }

  .page-header__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .page-header__glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 400px;
    background: radial-gradient(ellipse at center, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
  }

  .page-header .container {
    position: relative;
    z-index: 1;
  }

  .page-header h1 {
    margin: var(--space-4) 0;
    font-size: clamp(2.5rem, 6vw, 4rem);
  }

  .page-header__subtitle {
    font-size: 1.25rem;
    color: var(--xt-text-secondary);
    margin: 0;
  }

  .section-header {
    margin-bottom: var(--space-12);
  }

  .section-header h2 {
    margin-top: var(--space-4);
  }

  .section__cta {
    margin-top: var(--space-12);
  }

  .section__cta p {
    margin-bottom: var(--space-4);
  }

  /* Product Cards */
  .product-card--featured {
    position: relative;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(59, 130, 246, 0.1) 100%);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: var(--radius-xl);
    padding: var(--space-12);
    overflow: hidden;
  }

  .product-card__glow {
    position: absolute;
    top: 0;
    right: 0;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle at center, rgba(139, 92, 246, 0.2) 0%, transparent 70%);
    pointer-events: none;
  }

  .product-card__content {
    position: relative;
    z-index: 1;
    max-width: 700px;
  }

  .product-card__title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin: var(--space-4) 0;
  }

  .product-card__description {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: var(--space-6);
  }

  .product-card__features {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-8);
  }

  .product-card__feature {
    padding: var(--space-2) var(--space-4);
    font-size: 0.9375rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    color: var(--xt-text-primary);
  }

  /* Cards */
  .card .icon-circle {
    margin-bottom: var(--space-4);
    font-size: 1.5rem;
  }

  .card h3 {
    margin-bottom: var(--space-3);
  }
</style>
