---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Support | Xtend-AI';
const description = 'Get help with Xtend-AI products. Find answers to common questions or contact our support team.';

const faqs = [
  { question: 'How do I get started with My AI Bartender?', answer: 'Download the app from the App Store or Google Play, create an account, and start by scanning your bottles or manually adding what you have at home. Then just ask the bartender for recommendations!' },
  { question: 'Is My AI Bartender free?', answer: 'My AI Bartender offers a free tier with basic features. Premium features are available through a subscription for users who want the full experience.' },
  { question: 'What devices are supported?', answer: 'My AI Bartender is available on iOS (iPhone and iPad) and Android devices. We recommend using a device with a camera for the bottle scanning feature.' },
  { question: 'How do I share a recipe with friends?', answer: 'Open any recipe in your vault and tap the Share button. You can generate a simple code or link that your friends can use to add the recipe to their own collection.' },
  { question: 'I found a bug. How do I report it?', answer: 'We appreciate bug reports! Please email us at our support address with details about what happened, your device type, and app version. Screenshots are helpful too.' }
];
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <section class="page-header">
    <div class="page-header__glow"></div>
    <div class="container text-center">
      <span class="badge">Support</span>
      <h1>How can we <span class="text-gradient">help</span>?</h1>
      <p class="page-header__subtitle">We're here to help you get the most out of our apps</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="support-grid">
        <div class="support-card card card--glow">
          <div class="icon-circle icon-circle--purple">✉️</div>
          <h2>Email Support</h2>
          <p>Have a question or issue? Our support team is ready to help.</p>
          <a href="mailto:xtendai2017@gmail.com" class="btn btn--primary">Email Us</a>
        </div>

        <div class="support-card card">
          <div class="icon-circle icon-circle--blue">⏱️</div>
          <h2>Response Time</h2>
          <p>We typically respond within 24-48 hours during business days.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section section--glow">
    <div class="container">
      <h2 class="section-title text-center">Frequently Asked Questions</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details class="faq-item">
            <summary class="faq-question">{faq.question}</summary>
            <p class="faq-answer">{faq.answer}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container text-center">
      <h2>Still need help?</h2>
      <p class="cta-text">Can't find what you're looking for? Reach out and we'll get back to you.</p>
      <a href="/contact" class="btn btn--primary btn--large">Contact Us</a>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .page-header {
    position: relative;
    padding: var(--space-20) 0;
    overflow: hidden;
  }

  .page-header__glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 400px;
    background: radial-gradient(ellipse at center, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .page-header .container {
    position: relative;
    z-index: 1;
  }

  .page-header h1 {
    margin: var(--space-4) 0 var(--space-2);
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .page-header__subtitle {
    font-size: 1.125rem;
    color: var(--xt-text-secondary);
    margin: 0;
  }

  .section-title {
    margin-bottom: var(--space-12);
  }

  .support-grid {
    display: grid;
    gap: var(--space-6);
    max-width: 700px;
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .support-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .support-card {
    padding: var(--space-8);
    text-align: center;
  }

  .support-card .icon-circle {
    margin: 0 auto var(--space-4);
    font-size: 1.5rem;
  }

  .support-card h2 {
    font-size: 1.25rem;
    margin-bottom: var(--space-3);
  }

  .support-card p {
    margin-bottom: var(--space-6);
  }

  .faq-list {
    max-width: 700px;
    margin: 0 auto;
  }

  .faq-item {
    padding: var(--space-4) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .faq-question {
    font-family: var(--font-heading);
    font-size: 1.0625rem;
    font-weight: 600;
    cursor: pointer;
    padding: var(--space-2) 0;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--xt-text-primary);
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::after {
    content: '+';
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--xt-purple);
    transition: transform var(--transition-fast);
  }

  .faq-item[open] .faq-question::after {
    content: '−';
  }

  .faq-answer {
    padding-top: var(--space-3);
    line-height: 1.7;
  }

  .cta-text {
    font-size: 1.125rem;
    margin-bottom: var(--space-8);
  }
</style>
