---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Terms of Service | Xtend-AI';
const description = 'Terms of Service for Xtend-AI and its products including My AI Bartender.';
const lastUpdated = 'December 2024';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <section class="section">
    <div class="container">
      <article class="legal-content">
        <header class="legal-header">
          <p class="legal-notice">
            <strong>Note:</strong> This is a template terms of service. Please have this document reviewed by legal counsel before publishing.
          </p>
