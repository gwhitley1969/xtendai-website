---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Contact | Xtend-AI';
const description = 'Get in touch with Xtend-AI. We\'d love to hear from you about partnerships, feedback, or questions.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <section class="page-header">
    <div class="page-header__glow"></div>
    <div class="container">
      <span class="badge">Contact</span>
      <h1>Let's <span class="text-gradient">connect</span></h1>
      <p class="page-header__subtitle">We'd love to hear from you</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-form-wrapper card">
          <form id="contact-form" class="contact-form">
            <div class="form-group">
              <label for="name" class="form-label">Name</label>
              <input type="text" id="name" name="name" class="form-input" placeholder="Your name" autocomplete="name">
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email <span class="required">*</span></label>
              <input type="email" id="email" name="email" class="form-input" placeholder="you@example.com" required autocomplete="email">
            </div>

            <div class="form-group">
              <label for="message" class="form-label">Message <span class="required">*</span></label>
              <textarea id="message" name="message" class="form-textarea" placeholder="How can we help?" required></textarea>
            </div>

            <div class="form-group" style="display: none;" aria-hidden="true">
              <label for="website">Website</label>
              <input type="text" id="website" name="website" tabindex="-1" autocomplete="off">
            </div>

            <button type="submit" class="btn btn--primary btn--large form-submit">Send Message</button>
            <div id="form-status" class="form-status" aria-live="polite"></div>
          </form>
        </div>

        <div class="contact-info">
          <div class="info-card card card--glow">
            <h2>Other ways to reach us</h2>

            <div class="info-item">
              <div class="icon-circle icon-circle--purple">✉️</div>
              <div>
                <h3>Email</h3>
                <a href="mailto:xtendai2017@gmail.com">xtendai2017@gmail.com</a>
              </div>
            </div>

            <div class="info-item">
              <div class="icon-circle icon-circle--blue">⏱️</div>
              <div>
                <h3>Response Time</h3>
                <p>Within 24-48 hours</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .page-header {
    position: relative;
    padding: var(--space-20) 0;
    text-align: center;
    overflow: hidden;
  }

  .page-header__glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 400px;
    background: radial-gradient(ellipse at center, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .page-header .container {
    position: relative;
    z-index: 1;
  }

  .page-header h1 {
    margin: var(--space-4) 0 var(--space-2);
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .page-header__subtitle {
    font-size: 1.125rem;
    color: var(--xt-text-secondary);
    margin: 0;
  }

  .contact-grid {
    display: grid;
    gap: var(--space-8);
    max-width: 900px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .contact-grid {
      grid-template-columns: 1.5fr 1fr;
      align-items: start;
    }
  }

  .contact-form-wrapper {
    padding: var(--space-8);
  }

  .required {
    color: var(--xt-coral);
  }

  .form-submit {
    width: 100%;
  }

  .form-status {
    margin-top: var(--space-4);
    padding: var(--space-4);
    border-radius: var(--radius);
    display: none;
  }

  .form-status--success {
    display: block;
    background: rgba(52, 211, 153, 0.2);
    color: var(--xt-green);
    border: 1px solid rgba(52, 211, 153, 0.3);
  }

  .form-status--error {
    display: block;
    background: rgba(244, 114, 182, 0.2);
    color: var(--xt-coral);
    border: 1px solid rgba(244, 114, 182, 0.3);
  }

  .form-status--loading {
    display: block;
    background: rgba(139, 92, 246, 0.2);
    color: var(--xt-purple-light);
  }

  .info-card {
    padding: var(--space-8);
  }

  .info-card h2 {
    font-size: 1.125rem;
    margin-bottom: var(--space-6);
  }

  .info-item {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-item .icon-circle {
    width: 44px;
    height: 44px;
    font-size: 1.25rem;
  }

  .info-item h3 {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--xt-text-muted);
    margin-bottom: var(--space-1);
  }

  .info-item a,
  .info-item p {
    font-weight: 500;
    color: var(--xt-text-primary);
    margin: 0;
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const status = document.getElementById('form-status') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);

    if (formData.get('website')) return;

    status.className = 'form-status form-status--loading';
    status.textContent = 'Sending...';

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          name: formData.get('name'),
          email: formData.get('email'),
          message: formData.get('message')
        })
      });

      if (response.ok) {
        status.className = 'form-status form-status--success';
        status.textContent = 'Thanks for your message! We\'ll get back to you soon.';
        form.reset();
      } else {
        throw new Error('Failed to send');
      }
    } catch (error) {
      status.className = 'form-status form-status--error';
      status.textContent = 'Something went wrong. Please try emailing us directly.';
    }
  });
</script>
